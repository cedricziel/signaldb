# SignalDB Example Configuration File

# Database configuration for internal metadata
[database]
dsn = "postgresql://user:password@localhost/signaldb"

# Object storage configuration
[storage]
default = "local"

[storage.adapters.local]
url = "file://.data/storage"
prefix = "signaldb"
type = "filesystem"

# Service discovery configuration
[discovery]
dsn = "postgresql://user:password@localhost/signaldb"
heartbeat_interval = "30s"
poll_interval = "60s"
ttl = "5m"

# WAL configuration
[wal]
wal_dir = ".data/wal"
max_segment_size = 67108864  # 64MB
max_buffer_entries = 1000
flush_interval = "30s"
max_buffer_size_bytes = 134217728  # 128MB

# Iceberg configuration (optional)
[iceberg]
catalog_type = "memory"  # Currently supported: memory
catalog_uri = "memory://"
warehouse_path = "/tmp/signaldb/warehouse"